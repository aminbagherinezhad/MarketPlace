@page
@model MarketPlace.Pages.Admin.Blogs.CreateModel

@{
    ViewData["Title"] = "ساختن";
    //  Layout = "~/Pages/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}

@section jsckeditor{
<script src="~/ckeditor/adapters/jquery.js"></script>
<script src="~/ckeditor/adapters/jquery.js"></script>

}

<hr />

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">

                        <div class="col-md-12">
                            <form method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="CG.Title" class="control-label">عنوان بلاگ</label>
                                    <input asp-for="CG.Title" class="form-control" />
                                    <span asp-validation-for="CG.Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CG.Writer" class="control-label">نویسنده</label>
                                    <input asp-for="CG.Writer" class="form-control" />
                                    <span asp-validation-for="CG.Writer" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CG.ShortDescription" class="control-label">خلاصه متن</label>
                                    <input asp-for="CG.ShortDescription" class="form-control" />
                                    <span asp-validation-for="CG.ShortDescription" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CG.Text" class="control-label">متن</label>
                                    <textarea asp-for="CG.Text" class="form-control" rows="10"></textarea>
                                    <span asp-validation-for="CG.Text" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CG.ImageName" class="control-label">تصویر بلاگ</label>
                                    <input asp-for="CG.ImageName" class="form-control" />
                                    <span asp-validation-for="CG.ImageName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>

                        <div>
                            <a asp-page="Index">برگشت به لیست</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts
{

<script src="https://cdn.ckeditor.com/4.9.2/full/ckeditor.js"></script>
<script>

    CKEDITOR.replace('CG_Text', {
        customConfig: '/js/Config.js'
    });

</script>

}