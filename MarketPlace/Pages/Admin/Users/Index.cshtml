@page
@model MarketPlace.Pages.Admin.Users.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">


                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        لیست کاربران سایت
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div>
                                            <div>

                                                <div class="col-md-12" style="margin: 10px 0;">

                                                    <a asp-page="Create" class="btn btn-outline btn-success">افزودن کاربر جدید</a>

                                                </div>
                                                <table>
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">
                                                                @Html.DisplayNameFor(model => model.User[0].Id)
                                                            </th>
                                                            <th scope="col">
                                                                @Html.DisplayNameFor(model => model.User[0].Email)
                                                            </th>
                                                            <th scope="col">
                                                                @Html.DisplayNameFor(model => model.User[0].Mobile)
                                                            </th>
                                                            <th scope="col">
                                                                @Html.DisplayNameFor(model => model.User[0].FirstName)
                                                            </th>
                                                            <th scope="col">
                                                                @Html.DisplayNameFor(model => model.User[0].LastName)
                                                            </th>

                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.User)
                                                        {
                                                            <tr>
                                                                <td scope="row" data-label="@Html.DisplayNameFor(model => model.User[0].Id)">@Html.DisplayFor(modelItem => item.Id)</td>
                                                                <td data-label="@Html.DisplayNameFor(model => model.User[0].Email)">@Html.DisplayFor(modelItem => item.Email)</td>
                                                                <td data-label="@Html.DisplayNameFor(model => model.User[0].Mobile)">@Html.DisplayFor(modelItem => item.Mobile)</td>
                                                                <td data-label="@Html.DisplayNameFor(model => model.User[0].FirstName)">@Html.DisplayFor(modelItem => item.FirstName)</td>
                                                                <td data-label="@Html.DisplayNameFor(model => model.User[0].LastName)">@Html.DisplayFor(modelItem => item.LastName)</td>
                                                                <td>
                                                                    <a asp-page="./Edit" asp-route-id="@item.Id">ویرایش</a> |
                                                                    <a asp-page="./Details" asp-route-id="@item.Id">جزئیات</a> |
                                                                    <a asp-page="./Delete" asp-route-id="@item.Id">حذف</a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
