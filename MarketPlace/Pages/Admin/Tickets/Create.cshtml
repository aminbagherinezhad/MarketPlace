@page
@model MarketPlace.Pages.Admin.Tickets.CreateModel

@{
    ViewData["Title"] = "ایجاد کردن";
     Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">

<h2>ایجاد کردن</h2>

<h4>تیکت</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ticket.OwnerId" class="control-label"></label>
                <select asp-for="Ticket.OwnerId" class ="form-control" asp-items="ViewBag.OwnerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.Title" class="control-label">عنوان</label>
                <input asp-for="Ticket.Title" class="form-control" />
                <span asp-validation-for="Ticket.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.TicketState" class="control-label">وضعیت</label>
                <select asp-for="Ticket.TicketState" class="form-control"></select>
                <span asp-validation-for="Ticket.TicketState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.TicketSection" class="control-label">اولویت</label>
                <select asp-for="Ticket.TicketSection" class="form-control"></select>
                <span asp-validation-for="Ticket.TicketSection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.TicketPriority" class="control-label"></label>
                <select asp-for="Ticket.TicketPriority" class="form-control"></select>
                <span asp-validation-for="Ticket.TicketPriority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Ticket.IsReadByOwner" /> @Html.DisplayNameFor(model => model.Ticket.IsReadByOwner)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Ticket.IsReadByAdmin" /> @Html.DisplayNameFor(model => model.Ticket.IsReadByAdmin)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Ticket.IsDelete" /> @Html.DisplayNameFor(model => model.Ticket.IsDelete)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.CreateDate" class="control-label">تاریخ ایجاد</label>
                <input asp-for="Ticket.CreateDate" class="form-control" />
                <span asp-validation-for="Ticket.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.LastUpdateDate" class="control-label">تاریخ بروزرسانی</label>
                <input asp-for="Ticket.LastUpdateDate" class="form-control" />
                <span asp-validation-for="Ticket.LastUpdateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">برگشت به لیست</a>
</div>

        </div>
                </div>
            </div>
        </div>
    </div>
</section>
