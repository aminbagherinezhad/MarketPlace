@page
@model MarketPlace.Pages.Admin.Tickets.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">

                        <p>
                            <a asp-page="Create">ایجاد کردن</a>
                        </p>
                        <div>
                            <div>
                                <table>
                                    <thead>
                                        <tr>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.Ticket[0].Title)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.Ticket[0].TicketState)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.Ticket[0].TicketSection)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.Ticket[0].TicketPriority)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Ticket)
                                        {
                                            <tr>
                                                <td scope="row" data-label="@Html.DisplayNameFor(model => model.Ticket[0].Title)">@Html.DisplayFor(modelItem => item.Title)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.Ticket[0].TicketState)">@Html.DisplayFor(modelItem => item.TicketState)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.Ticket[0].TicketSection)">@Html.DisplayFor(modelItem => item.TicketSection)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.Ticket[0].TicketPriority)">@Html.DisplayFor(modelItem => item.TicketPriority)</td>
                                                <td>
                                                    <a asp-page="./Edit" asp-route-id="@item.Id">ویرایش</a> |
                                                    <a asp-page="./Details" asp-route-id="@item.Id">جزئیات</a> |
                                                    <a asp-page="./Delete" asp-route-id="@item.Id">حذف</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
