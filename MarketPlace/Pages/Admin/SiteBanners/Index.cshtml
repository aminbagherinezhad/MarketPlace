@page
@model MarketPlace.Pages.Admin.SiteBanners.IndexModel

@{
    ViewData["Title"] = "صفحه اصلی";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">

                        <p>
                            <a asp-page="Create">ایجاد کردن</a>
                        </p>
                        <div>
                            <div>
                                <table>
                                    <thead>
                                        <tr>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.SiteBanner[0].ImageName)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.SiteBanner[0].Url)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.SiteBanner[0].ColSize)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.SiteBanner[0].BannerPlacement)
                                            </th>

                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.SiteBanner)
                                        {
                                            <tr>
                                                <td scope="row" data-label="@Html.DisplayNameFor(model => model.SiteBanner[0].ImageName)">@Html.DisplayFor(modelItem => item.ImageName)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.SiteBanner[0].Url)">@Html.DisplayFor(modelItem => item.Url)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.SiteBanner[0].ColSize)">@Html.DisplayFor(modelItem => item.ColSize)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.SiteBanner[0].BannerPlacement)">@Html.DisplayFor(modelItem => item.BannerPlacement)</td>
                                                <td>
                                                    <a asp-page="./Edit" asp-route-id="@item.Id">ویرایش</a> |
                                                    <a asp-page="./Details" asp-route-id="@item.Id">جزئیات</a> |
                                                    <a asp-page="./Delete" asp-route-id="@item.Id">حذف</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>