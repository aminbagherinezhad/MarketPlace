@page
@model MarketPlace.Pages.Admin.SiteBanners.EditModel

@{
    ViewData["Title"] = "ویرایش";
     Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">

<h2>ویرایش</h2>

<h4>SiteBanبنر تبلیغاتیner</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CG.ImageName" class="control-label">عکس</label>
                <input asp-for="CG.ImageName" class="form-control" />
                <span asp-validation-for="CG.ImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CG.Url" class="control-label">آدرس</label>
                <input asp-for="CG.Url" class="form-control" />
                <span asp-validation-for="CG.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CG.ColSize" class="control-label"> سایز تصاویر col-md-number col-lg-number</label>
                <input asp-for="CG.ColSize" class="form-control" />
                <span asp-validation-for="CG.ColSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CG.BannerPlacement" class="control-label">مکان قرارگیری</label>
                <input asp-for="CG.BannerPlacement" class="form-control"></input>
                <span asp-validation-for="CG.BannerPlacement" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="CG.Id" />
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="CG.IsDelete" /> @Html.DisplayNameFor(model => model.CG.IsDelete)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CG.CreateDate" class="control-label">تاریخ ایجاد</label>
                <input asp-for="CG.CreateDate" class="form-control" />
                <span asp-validation-for="CG.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CG.LastUpdateDate" class="control-label">تاریخ بروزرسانی</label>
                <input asp-for="CG.LastUpdateDate" class="form-control" />
                <span asp-validation-for="CG.LastUpdateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">برگشت به لیست</a>
</div>

    </div>
                </div>
            </div>
        </div>
    </div>
</section>