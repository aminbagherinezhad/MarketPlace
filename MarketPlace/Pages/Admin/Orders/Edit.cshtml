@page
@model MarketPlace.Pages.Admin.Orders.EditModel

@{
    ViewData["Title"] = "ویرایش";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">

                        <h2>ویرایش</h2>

                        <h4>سفارشات</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <form method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Order.UserId" class="control-label">شناسه کاربر</label>
                                        <input asp-for="Order.UserId" class="form-control" />
                                        <span asp-validation-for="Order.UserId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Order.PaymentDate" class="control-label">تاریخ پرداخت</label>
                                        <input asp-for="Order.PaymentDate" class="form-control" />
                                        <span asp-validation-for="Order.PaymentDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input asp-for="Order.IsPaid" /> @Html.DisplayNameFor(model => model.Order.IsPaid)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Order.TracingCode" class="control-label">کد تراکنش</label>
                                        <input asp-for="Order.TracingCode" class="form-control" />
                                        <span asp-validation-for="Order.TracingCode" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Order.Description" class="control-label">توضیحات</label>
                                        <input asp-for="Order.Description" class="form-control" />
                                        <span asp-validation-for="Order.Description" class="text-danger"></span>
                                    </div>
                                    <input type="hidden" asp-for="Order.Id" />
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input asp-for="Order.IsDelete" /> @Html.DisplayNameFor(model => model.Order.IsDelete)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Order.CreateDate" class="control-label">تاریخ ایجاد</label>
                                        <input asp-for="Order.CreateDate" class="form-control" />
                                        <span asp-validation-for="Order.CreateDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Order.LastUpdateDate" class="control-label">تاریخ بروزرسانی</label>
                                        <input asp-for="Order.LastUpdateDate" class="form-control" />
                                        <span asp-validation-for="Order.LastUpdateDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-info" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div>
                            <a asp-page="./Index">برگشت به لیست</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>