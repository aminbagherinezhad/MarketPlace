@page
@model MarketPlace.Pages.Admin.Orders.IndexModel

@{
    ViewData["Title"] = "صفحه اصلی";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">

                
                        <p>
                            <a asp-page="Create">ایجاد کردن</a>
                        </p>
                        <div>
                            <div>
                                <table>
                                    <thead>
                                        <tr>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.Order[0].UserId)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.Order[0].PaymentDate)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.Order[0].IsPaid)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.Order[0].TracingCode)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.Order[0].Description)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      
                                        @foreach (var item in Model.Order)
                                        {
                                            <tr>
                                                <td scope="row" data-label="@Html.DisplayNameFor(model => model.Order[0].UserId)">@Html.DisplayFor(modelItem => item.UserId)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.Order[0].PaymentDate)">@Html.DisplayFor(modelItem => item.PaymentDate)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.Order[0].IsPaid)">@Html.DisplayFor(modelItem => item.IsPaid)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.Order[0].TracingCode)">@Html.DisplayFor(modelItem => item.TracingCode)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.Order[0].Description)">@Html.DisplayFor(modelItem => item.Description)</td>
                                                <td>
                                                    <a asp-page="./Edit" asp-route-id="@item.Id">ویرایش</a> |
                                                    <a asp-page="./Details" asp-route-id="@item.Id">جزئیات</a> |
                                                    <a asp-page="./Delete" asp-route-id="@item.Id">حذف</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>