@page
@model MarketPlace.Pages.Admin.Socials.CreateModel

@{
    ViewData["Title"] = "ایجاد کردن";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">

                        <h2>ایجاد کردن</h2>

                        <h4>شبکه های اجتماعی</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <form method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Social.Icon" class="control-label">ایکون</label>
                                        <input asp-for="Social.Icon" class="form-control" />
                                        <span asp-validation-for="Social.Icon" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Social.Href" class="control-label">لینک شبکه اجتماعی</label>
                                        <input asp-for="Social.Href" class="form-control" />
                                        <span asp-validation-for="Social.Href" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Social.Class" class="control-label">کلاس مورد نظر </label>
                                        <input asp-for="Social.Class" class="form-control" />
                                        <span asp-validation-for="Social.Class" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input asp-for="Social.IsDelete" /> @Html.DisplayNameFor(model => model.Social.IsDelete)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Social.CreateDate" class="control-label">تاریخ بصورت دستی وارد کنید</label>
                                        <input asp-for="Social.CreateDate" class="form-control" />
                                        <span asp-validation-for="Social.CreateDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Social.LastUpdateDate" class="control-label">تاریخ را بصورت دستی وارد کنید </label>
                                        <input asp-for="Social.LastUpdateDate" class="form-control" />
                                        <span asp-validation-for="Social.LastUpdateDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div>
                            <a asp-page="Index">برگشت به لیست</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>