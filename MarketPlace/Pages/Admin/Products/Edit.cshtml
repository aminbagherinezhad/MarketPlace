@page
@model MarketPlace.Pages.Admin.Products.EditModel

@{
    ViewData["Title"] = "ویرایش";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">

                        <h2>ویرایش</h2>

                        <h4>محصول</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-8">
                                <form method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Product.SellerId" class="control-label">نام فروشنده</label>
                                        <select asp-for="Product.SellerId" class="form-control" asp-items="ViewBag.SellerId"></select>
                                        <span asp-validation-for="Product.SellerId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Product.Title" class="control-label">عنوان محصول</label>
                                        <input asp-for="Product.Title" class="form-control" />
                                        <span asp-validation-for="Product.Title" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Product.ImageName" class="control-label">عکس</label>
                                        <input asp-for="Product.ImageName" class="form-control" />
                                        <span asp-validation-for="Product.ImageName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Product.Price" class="control-label">قیمت</label>
                                        <input asp-for="Product.Price" class="form-control" />
                                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Product.ShortDescription" class="control-label">خلاصه</label>
                                        <input asp-for="Product.ShortDescription" class="form-control" />
                                        <span asp-validation-for="Product.ShortDescription" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Product.Description" class="control-label">توضیحات کوتاه</label>
                                        <input asp-for="Product.Description" class="form-control" />
                                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Product.ProductAcceptOrRejectDescription" class="control-label">وضعیت</label>
                                        <input asp-for="Product.ProductAcceptOrRejectDescription" class="form-control" />
                                        <span asp-validation-for="Product.ProductAcceptOrRejectDescription" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input asp-for="Product.IsActive" /> @Html.DisplayNameFor(model => model.Product.IsActive)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Product.ProductAcceptanceState" class="control-label">وضعیت</label>
                                        <select asp-for="Product.ProductAcceptanceState" class="form-control"></select>
                                        <span asp-validation-for="Product.ProductAcceptanceState" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Product.SiteProfit" class="control-label">پورسانت</label>
                                        <input asp-for="Product.SiteProfit" class="form-control" />
                                        <span asp-validation-for="Product.SiteProfit" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Product.Placement" class="control-label">مکان قرارگیری</label>
                                        <input asp-for="Product.Placement" class="form-control" />
                                        <span asp-validation-for="Product.Placement" class="text-danger"></span>
                                    </div>
                                    <input type="hidden" asp-for="Product.Id" />
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input asp-for="Product.IsDelete" /> @Html.DisplayNameFor(model => model.Product.IsDelete)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Product.CreateDate" class="control-label">تاریخ ایجاد</label>
                                        <input asp-for="Product.CreateDate" class="form-control" />
                                        <span asp-validation-for="Product.CreateDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Product.LastUpdateDate" class="control-label">تاریخ بروزرسانی</label>
                                        <input asp-for="Product.LastUpdateDate" class="form-control" />
                                        <span asp-validation-for="Product.LastUpdateDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-info" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div>
                            <a asp-page="./Index">برگشت به لیست</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
