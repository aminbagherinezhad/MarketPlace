    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <h2>پاک کردن بلاگ</h2>

                        <h3>آیا از پاک کردن این بلاگ مطمئن هستین ؟</h3>
                        <div>
                            <h4>About</h4>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.About.ImageName)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.About.ImageName)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.About.Text)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.About.Text)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.About.IsDelete)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.About.IsDelete)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.About.CreateDate)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.About.CreateDate)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.About.LastUpdateDate)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.About.LastUpdateDate)
