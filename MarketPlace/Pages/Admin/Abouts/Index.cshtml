@page
@model MarketPlace.Pages.Admin.Abouts.IndexModel

@{
    ViewData["Title"] = "صفحه اصلی";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">

                        <p>
                            <a asp-page="Create"> جدید</a>
                        </p>
                        <div class="panel-body">
                            <div>
                                <table>
                                    <thead>

                                        <tr>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.About[0].ImageName)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.About[0].Text)
                                            </th>

                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.About)
                                        {
                                            <tr>
                                                <td scope="row" data-label="@Html.DisplayNameFor(model => model.About[0].ImageName)">@Html.DisplayFor(modelItem => item.ImageName)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.About[0].Text)">@Html.DisplayFor(modelItem => item.Text)</td>
                                                <td>
                                                    <a asp-page="./Details" asp-route-id="@item.Id">جزئیات</a> |
                                                    <a asp-page="./Delete" asp-route-id="@item.Id">حذف</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>