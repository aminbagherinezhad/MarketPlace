@page
@model MarketPlace.Pages.Admin.contactsetting.IndexModel

@{
    ViewData["Title"] = "صفحه اصلی";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBarAdmin")
                </div>

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">

                   
                        <p>
                            <a asp-page="Create">ایجاد کردن</a>
                        </p>
                        <div>
                            <div>
                                <table>
                                    <thead>
                                        <tr>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.SiteSetting[0].Mobile)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.SiteSetting[0].Phone)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.SiteSetting[0].Email)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.SiteSetting[0].FooterText)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.SiteSetting[0].CopyRight)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.SiteSetting[0].MapScript)
                                            </th>

                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.SiteSetting[0].Address)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.SiteSetting[0].IsDefault)
                                            </th>
                                       

                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       
                                        @foreach (var item in Model.SiteSetting)
                                        {

                                            <tr>
                                                <td scope="row" data-label="@Html.DisplayNameFor(model => model.SiteSetting[0].Mobile)"> @Html.DisplayFor(modelItem => item.Mobile)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.SiteSetting[0].Phone)">@Html.DisplayFor(modelItem => item.Phone)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.SiteSetting[0].Email)">@Html.DisplayFor(modelItem => item.Email)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.SiteSetting[0].FooterText)">@Html.DisplayFor(modelItem => item.FooterText)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.SiteSetting[0].CopyRight)">@Html.DisplayFor(modelItem => item.CopyRight)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.SiteSetting[0].MapScript)">@Html.DisplayFor(modelItem => item.MapScript)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.SiteSetting[0].Address)">@Html.DisplayFor(modelItem => item.Address)</td>
                                                <td data-label="@Html.DisplayNameFor(model => model.SiteSetting[0].IsDefault)">@Html.DisplayFor(modelItem => item.IsDefault)</td>
                                                <td>
                                                    <a asp-page="./Edit" asp-route-id="@item.Id">ویرایش</a> |
                                                    <a asp-page="./Details" asp-route-id="@item.Id">جزئیات</a> |
                                                    <a asp-page="./Delete" asp-route-id="@item.Id">حذف</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>