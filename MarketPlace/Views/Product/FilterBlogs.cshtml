
@using MarketPlace.DataLayer.Entities.Mazholar


@{
    ViewData["Title"] = "بلاگ";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
   var Blog = ViewData["Blog"] as List<Blog>;
}




<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>بلاگ </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!--blog area start-->
<div class="blog_page_section blog_fullwidth mt-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-12">
                <div class="blog_wrapper ">
                    <div class="blog_header">
                        <h1>بلاگ</h1>
                    </div>


                    @if (Blog != null && Blog.Any())
                    {
                        foreach (var item in Blog)
                        {
                            <article class="single_blog mb-60">
                                <figure>
                                    <div class="blog_thumb">
                                        <a href="/BlogDetail/@item.Id"><img src="~/Blog/@item.ImageName" alt="@item.Title"></a>
                                    </div>
                                    <figcaption class="blog_content">
                                        <h3><a href="/BlogDetail/@item.Id">@item.Title</a></h3>
                                        <div class="blog_meta">
                                            <span class="author">ارسال توسط : <a href="#">@item.Writer</a> / </span>
                                        </div>
                                        <div class="blog_desc">
                                            <p>@item.ShortDescription</p>
                                        </div>
                                        <footer class="readmore_button">
                                            <a href="/BlogDetail/@item.Id">بیشتر بخوانید</a>
                                        </footer>
                                    </figcaption>
                                </figure>
                            </article>
                        }
                    }
                </div>
            </div>

        </div>
    </div>
</div>
<!--blog area end-->
