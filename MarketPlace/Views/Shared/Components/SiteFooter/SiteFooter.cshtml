@using MarketPlace.DataLayer.Entities.Site
@using MarketPlace.DataLayer.Entities.Account
@*@using MarketPlace.Application.EntitiesExtensions*@
@{
    var siteSetting = ViewBag.siteSetting as SiteSetting;
    //var user = ViewBag.user as User;
}

<!--footer area start-->
<footer class="footer_widgets">
    <div class="footer_top">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="widgets_container contact_us">
                        <div class="footer_logo">
                            @await Component.InvokeAsync("Logo")
                        </div>
                        <div class="footer_contact">
                            <p>@siteSetting.FooterText</p>
                            <p><span>آدرس: </span>@siteSetting.Address</p>
                            @if (!string.IsNullOrEmpty(siteSetting.Mobile))
                            {
                                <p>
                                    <span>موبایل: </span>
                                    @foreach (var mobile in siteSetting.Mobile.Split('-'))
                                    {
                                        <a class="ltr-text" href="tel:@mobile">@mobile</a>

                                        <text>,</text>
                                    }
                                </p>
                            }
                            <p><span>پشتیبانی: </span><a target="_blank" href="#">@siteSetting.Email</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 col-sm-6">
                    <div class="widgets_container widget_menu">
                        <h3>اطلاعات</h3>
                        <div class="footer_menu">
                            <ul>
                                <li><a href="/About-Us">درباره ما</a></li>
                                @*   <li><a asp-controller="Product" asp-action="FilterBlogs">صفحه بلاگ</a></li>*@
                                <li><a href="/contact-us">تماس با ما</a></li>
                                <li><a href="/products">محصولات</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="col-lg-2 col-md-6 col-sm-6">
                        <div class="widgets_container widget_menu">
                            <h3>حساب کاربری</h3>
                            <div class="footer_menu">
                                <ul>
                                    <li><a asp-controller="Account" asp-action="Register"> ثبت نام </a></li>
                                    <li><a asp-controller="Account" asp-action="Login"> ورود </a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-lg-2 col-md-6 col-sm-6">
                        <div class="widgets_container widget_menu">
                            <h3>حساب کاربری</h3>
                            <div class="footer_menu">
                                <ul>

                                    <li><a asp-area="User" asp-controller="Home" asp-action="Dashboard"> @*@user.GetUserShowName()*@پنل کاربری </a></li>
                                    <li><a asp-controller="Account" asp-action="LogOut"> خروج </a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-lg-4 col-md-6">
                    <div class="widgets_container newsletter">
                        <h3>ما را دنبال کنید</h3>
                        <div class="footer_social_link">
                            <ul>
                                @await Component.InvokeAsync("Social")
                            </ul>
                        </div>
                        @* <div class="subscribe_form">
                            <h3>هم اکنون عضو خبرنامه ما شوید</h3>
                            <form id="mc-form" class="mc-form footer-newsletter" method="post">
                            <input id="mc-email" type="email" autocomplete="off" placeholder="... آدرس ایمیل شما" dir="ltr">
                            <button id="mc-submit">اشتراک!</button>
                            </form>
                            <!-- mailchimp-alerts Start -->
                            <div class="mailchimp-alerts text-centre">
                            <div class="mailchimp-submitting"></div>
                            <!-- mailchimp-submitting end -->
                            <div class="mailchimp-success"></div>
                            <!-- mailchimp-success end -->
                            <div class="mailchimp-error"></div>
                            <!-- mailchimp-error end -->
                            </div>
                            <!-- mailchimp-alerts end -->
                            </div>*@
                        <div class="footer_bottom">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="copyright_area">
                                            <p>@siteSetting.CopyRight</p>
                                        </div>
                                    </div>
                                    @await Component.InvokeAsync("Lices")
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!---TODO: Lices-->
</footer>
<!--footer area end-->
