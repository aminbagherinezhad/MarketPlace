@using MarketPlace.DataLayer.Entities.Account
@{
    
    var users = ViewData["User"] as User;
}

<div class="profile-address">
    <div class="box-header">
        <span class="box-title">نشانی </span>
    </div>
    <div class="profile-address-item">
        <div class="profile-address-item-top">
            <div class="profile-address-item-title">@users.FirstName @users.LastName</div>
            @*   <div class="ui-more">
                <button class="btn-remove-address btn btn-danger" type="submit">حذف</button>
                </div>*@
        </div>

        <div class="profile-address-content">
            <ul class="profile-address-info">
                <li>
                    <div class="profile-address-info-item location">
                        <i class="mdi mdi-map-outline"></i>
                        @users.Address
                    </div>
                </li>
                <li>
                    <div class="profile-address-info-item location">
                        <i class="mdi mdi-email-outline"></i>
                        @users.Email
                    </div>
                </li>
                <li>
                    <div class="profile-address-info-item location">
                        <i class="mdi mdi-phone"></i>
                        @users.Mobile
                    </div>
                </li>

                <li class="location-link">
                    <a asp-area="User" asp-controller="Account" asp-action="EditProfile" class="edit-address-link">ویرایش آدرس</a>
                </li>
            </ul>
        </div>
    </div>
</div>